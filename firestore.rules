rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can only read and write to their own document.
    match /users/{uid} {
      allow read, write: if request.auth.uid == uid;
    }

    // Authenticated users can read competition analysis data.
    match /competitions/{docId} {
      allow read: if request.auth != null;
      allow write: if false; // Writes are server-side only
    }

    // Authenticated users can read the global competition cache.
    match /cachedCompetitions/global {
        allow read: if request.auth != null;
        allow write: if false; // Writes are server-side only
    }
    
    // Anyone can read the demo competition data for the landing page.
    match /demoCompetitions/{docId} {
      allow read: if true;
      allow write: if false; // Writes are server-side only
    }
  }
}
